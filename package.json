{
  "name": "@kuali/logger",
  "version": "0.0.1",
  "description": "Standardized logger for Kuali apps",
  "main": "logger.js",
  "scripts": {
    "test": "jest --coverage",
    "watch": "jest --watch",
    "report": "open coverage/lcov-report/index.html"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/tests/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "verbose": true
  },
  "dependencies": {
    "bunyan": "^1.8.12",
    "bunyan-format": "^0.2.1",
    "bunyan-middleware": "^0.8.0",
    "bunyan-prettystream": "^0.1.3"
  },
  "devDependencies": {
    "express": "^4.15.4",
    "jest": "^20.0.4",
    "supertest": "^3.0.0"
  }
}
